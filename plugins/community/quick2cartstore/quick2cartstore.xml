<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="community" method="upgrade">

	<name>Quick2cart - Community - My Stores</name>

	<author>TechJoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<copyright>Copyright(C)2012-13 TechJoomla</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<creationDate>3rd Mar 2014</creationDate>
	<version>2.2.4.1</version>

	<isapplication>true</isapplication>

	<description>PLG_COMMUNITY_QUICK2CARTSTORE_XML_DESCRIPTION</description>

	<languages>
		<language tag="en-GB">en-GB.plg_community_quick2cartstore.ini</language>
		<language tag="en-GB">en-GB.plg_community_quick2cartstore.sys.ini</language>
	</languages>

	<files>
		<file plugin="quick2cartstore">quick2cartstore.php</file>
		<file>index.html</file>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="coreapp" type="list" default="1" label="Core Application" description="Causes this application to not appearin the users applications list but it will allow this application to appear in the user profile automatically if selected.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="position" type="list" default="sidebar-top" label="Avalaible Positions" description="Select one or more available positions from the list. You can use Ctrl-click to select more than one item.">
					<option value="content">Content</option>
					<option value="sidebar-top">Sidebar Top</option>
					<option value="sidebar-bottom">Sidebar Bottom</option>
				</field>
				<field name="no_of_stores" type="text" default="2" label="Number of stores" description=""/>
				<field name="cache" type="list" default="0" label="PLG_QUICK2CART_CACHING_LBL" description="PLG_QUICK2CART_CACHING_DESC">
						<option value="0">PLG_QUICK2CART_NO</option>
						<option value="1">PLG_QUICK2CART_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
